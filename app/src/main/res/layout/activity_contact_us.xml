<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5D328">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/umak" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#052865"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:shadowColor="#D2000000"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="UMak Fitness Gym"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <Button
            android:id="@+id/btnBackHomeContact"
            android:layout_width="147dp"
            android:layout_height="65dp"
            android:layout_margin="16dp"
            android:backgroundTint="#052865"
            android:text="Back to Home"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"/>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="312dp"
            android:layout_height="383dp"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="15dp"
            android:background="#FAFAFA"
            app:layout_constraintBottom_toTopOf="@+id/btnBackHomeContact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/fb" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="43dp"
                    app:srcCompat="@drawable/email" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginBottom="24dp"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Facebook:\nUniversity Of Makati"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toEndOf="@+id/imageView7"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Email:\ninfo@umak.edu.ph"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="78dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="43dp"
                    android:layout_toEndOf="@+id/imageView8"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Contact No:\n09123456789"
                    android:textSize="20sp" />
        </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

