<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chestLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D328"
    android:padding="16dp"
    tools:context=".ChestActivity">

    <TextView
        android:id="@+id/tvChestTitle"
        android:layout_width="274dp"
        android:layout_height="71dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Chest Exercises"
        android:textColor="#052865"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewChest"
        android:layout_width="203dp"
        android:layout_height="535dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChestTitle" />

    <TextView
        android:id="@+id/descriptionChestTextView"
        android:layout_width="143dp"
        android:layout_height="246dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:background="#00000000"
        android:padding="16dp"
        android:text="Select an exercise to view description"
        android:textColor="#052865"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnChestWorkoutB"
        app:layout_constraintStart_toEndOf="@+id/listViewChest" />

    <Button
        android:id="@+id/btnChestWorkoutB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="41dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="144dp"
        android:layout_height="257dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/listViewChest"
        app:layout_constraintTop_toBottomOf="@+id/tvChestTitle"
        app:srcCompat="@drawable/default_exercise1" />
</androidx.constraintlayout.widget.ConstraintLayout>