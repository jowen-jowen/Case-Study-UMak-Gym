<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D328"
    android:padding="16dp"
    tools:context=".BackActivity">

    <TextView
        android:id="@+id/tvBackTitle"
        android:layout_width="248dp"
        android:layout_height="56dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Back Exercises"
        android:textColor="#052865"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewBack"
        android:layout_width="203dp"
        android:layout_height="535dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBackTitle" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="143dp"
        android:layout_height="246dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:background="#"
        android:padding="16dp"
        android:text="Select an exercise to view description"
        android:textColor="#052865"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBackMuscleB"
        app:layout_constraintStart_toEndOf="@+id/listViewBack" />

    <Button
        android:id="@+id/btnBackMuscleB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="41dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="149dp"
        android:layout_height="225dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/listViewBack"
        app:layout_constraintTop_toBottomOf="@+id/tvBackTitle"
        app:srcCompat="@drawable/backpic" />

</androidx.constraintlayout.widget.ConstraintLayout>
